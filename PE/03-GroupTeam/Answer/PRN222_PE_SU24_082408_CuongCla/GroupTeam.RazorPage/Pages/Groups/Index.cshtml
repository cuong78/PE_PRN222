@page
@model GroupTeam.RazorPage.Pages.Groups.IndexModel

@{
    ViewData["Title"] = "Groups Ranking";
}

<h1>Groups Ranking</h1>

<p>View the detailed ranking of teams within each group, sorted by points in ascending order.</p>

@if (Model.GroupedTeams != null && Model.GroupedTeams.Any())
{
    @foreach (var group in Model.GroupedTeams)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h3>@group.Key</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Team Name</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in group.Value)
                        {
                            <tr>
                                <td><strong>@team.Position</strong></td>
                                <td>@team.TeamName</td>
                                <td>@team.Point</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <p>No teams found.</p>
    </div>
}

<div class="mt-3">
    <a asp-page="/Teams/Index" class="btn btn-secondary">Back to Teams List</a>
</div>
